<section class="new-post-section">
</section>

  <section>
    <ul class="post-list">
      {{#each posts as |post|}}
        <li>
          <textarea disabled class="post-title">{{post.title}}</textarea>
          <textarea disabled class="post-content">{{post.content}}</textarea>
          <button class="editlink">edit post</button>
          <button postId="{{post.id}}" class="submitlink hide">submit post</button>
          <button class="deletelink">delete post</button>
        </li>
      {{/each}}
    </ul>
  </section>


<form id="makePost"> 
    <label>Title</label>
    <input id="title"></input>
    <label>Content</label>
    <textarea id="content"></textarea>
    <button>Create Post</button>
</form>

<script src="/js/createpost.js"></script>
<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>


