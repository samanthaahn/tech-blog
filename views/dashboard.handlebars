<section class="new-post-section">
  <button type="submit" class="btn" id="create-new-post"> Create Post</button>
</section>

{{#if posts.length}}
  <section>
    <h2>Your Dashboard</h2>
    <ul class="post-list">
      {{#each posts as |post|}}
        <li>
          <p class="post-title">{{post.title}}</p>
          <p class="post-content">{{post.content}}</p>
          <p> By: {{post.user.username}} on {{formatDate post.createdAt}}</p>
          <a href="/dashboard/edit/{{post.id}}" class="editlink">edit post</a>
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}

<script src="/js/createpost.js"></script>